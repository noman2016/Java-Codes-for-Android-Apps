package com.nomanapps.commisioncalculator;

import android.R.string;
import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.Menu;
import android.view.MenuItem;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class MainActivity extends Activity {
	EditText num1, num2;
	Button btn1,btn2;
	TextView result, textabout;
	

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		
		num1=(EditText) findViewById(R.id.num1);
		num2=(EditText) findViewById(R.id.num2);
		btn1=(Button) findViewById(R.id.btn1);
		btn2= (Button) findViewById(R.id.btn2);
		textabout=(TextView) findViewById(R.id.textabout);
		
		result=(TextView) findViewById(R.id.result);
	
//		String f = num1.getText().toString();
//    	String s = num2.getText().toString();
//        Double fd = Double.parseDouble(f);
//        Double sd = Double.parseDouble(s);
		
		btn1.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				// verible logic for C language
				//double commision,price,net_price,percentage_commision;
				//program logic
				//    printf("Please Enter Your Commision = ");
			    //scanf("%f",&commision);
			    //percentage_commision=100-commision;
			    /*printf("\nYour percentage commision is = %f",percentage_commision);*/
			    //printf("\n\nPlease Enter Your Price = ");
			    //scanf("%f",&price);
			    //net_price=percentage_commision*price/100;
			    //printf("\n\nYour Net Price is = %.3f",net_price);
			    //printf("\n\n");
				String fs;
				try {
					String f = num1.getText().toString();
			    	String s = num2.getText().toString();
			        Double fd = Double.parseDouble(f);
			        fd=100-fd;
			        Double sd = Double.parseDouble(s);
					fs=(fd*sd)/100+"";
					
				} catch (Exception e) {
					// TODO: handle exception
					fs="Enter the number appropriately";
					
				}
				result.setText( fs );
			}
		});
		
		btn2.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				
				num1.setText("");
				num2.setText("");
				result.setText("");
				
			}
		});
		
		textabout.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				Intent intent1=new Intent(MainActivity.this,AboutmeActivity.class);
				startActivity(intent1);
			}
		});
	}
}


